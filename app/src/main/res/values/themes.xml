<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.News" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2E7D32</item>
        <item name="colorPrimaryVariant">#2E7D32</item>
        <item name="colorOnPrimary">#0C0C0C</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#0A0909</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
    </style>
        <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSizeTopRight">60dp</item>
            <item name="cornerSizeTopLeft">60dp</item>
            <item name="cornerSizeBottomRight">0dp</item>
            <item name="cornerSizeBottomLeft">0dp</item>
        </style>
    <style name="LeftSide" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView2.Cut</item>
    </style>
    <style name="RigtSide" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView3.Cut</item>
    </style>
        <style name="ShapeAppearanceOverlay.MaterialCardView2.Cut" parent="">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSizeTopRight">30dp</item>
            <item name="cornerSizeTopLeft">30dp</item>
            <item name="cornerSizeBottomRight">0dp</item>
            <item name="cornerSizeBottomLeft">30dp</item>
            <item name="cardBackgroundColor">#C62828</item>
        </style>
    <style name="ShapeAppearanceOverlay.MaterialCardView3.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeBottomRight">30dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cardBackgroundColor">#2E7D32</item>
    </style>

<!--    <style name="DarkSearchViewTheme" parent="Widget.AppCompat.SearchView">-->
