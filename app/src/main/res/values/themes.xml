<!--    </style>-->
    <style name="searchViewBackground" parent="">
        <item name="android:background">@drawable/searchview_lightbackground</item>
    </style>
    <style name="titleColor" parent="">
        <item name="android:textColor">#FAF8F8</item>
    </style>
    <style name="postTitle" parent="">
        <item name="android:textColor">#0C0C0C</item>
    </style>
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>

    </style>
</resources>